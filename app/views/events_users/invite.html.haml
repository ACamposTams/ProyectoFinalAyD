= simple_form_for (@event), :url => invite_events_users_path(@event), :method => :GET do |f|
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading
				%h1 Available Users
			.panel-body
				.form-group
					= collection_select(:users, :id, @all_users, :id, :email, {}, {:multiple => true} )
			.panel-footer
				.actions
					= f.submit 'Invite', class: 'btn btn-primary'